{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "bundler",
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*", "e2e/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
